<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gas.swiftel.Activity.LoginActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/Image45"
                android:layout_width="190dp"
                android:layout_centerHorizontal="true"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/loginrafiki"/>


            <TextView
                android:id="@+id/SignUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back!.."
                android:textStyle="bold"
                android:layout_below="@id/Image45"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="8dp"
                android:textSize="23dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/SignUp"
                android:layout_below="@id/SignUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in to your existing account"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ColorGrey"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"/>







            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Emaillog"
                android:layout_below="@id/SignUp"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:errorEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Your Email"
                    android:inputType="textEmailAddress"/>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Passwordlog"
                android:layout_below="@id/Emaillog"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"/>


            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/ResetPassword"
                android:layout_below="@id/Passwordlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="Forgot Password?"/>





            <Button
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:id="@+id/LogIn"
                android:layout_below="@id/ResetPassword"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundbtn_black"
                android:textColor="@color/colorSecondary"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:text="Log in"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/LogIn"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/AccntDnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorGrey"
                    android:text="I don't have an Account?"
                    android:layout_below="@id/LogIn"/>


                <TextView
                    android:id="@+id/Reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Register  "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorSecondary"
                    android:textAlignment="center"
                    android:layout_below="@id/AccntDnt"/>


            </LinearLayout>




        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>