<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:layout_height="match_parent"
    tools:context="com.gas.swiftel.Activity.CustomerNotifyActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Order_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        app:civ_border_width="3dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="@color/colorSecondary"
        android:src="@drawable/shippingdelivery"/>



    <TextView
        android:id="@+id/Order_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Order_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="You have a new Order"
        android:textColor="@color/ColorWhite"/>



    <TextView
        android:id="@+id/Orders_time"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2:00 Am"
        android:textColor="@color/ColorWhite"
        android:layout_marginTop="15dp"
        android:layout_below="@id/Order_txt"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Orders_adress"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Orders_time"
        android:layout_marginTop="15dp"
        android:text="Kabiria"
        android:textColor="@color/ColorWhite"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/Orders_distance"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="2 Km"
        android:textColor="@color/ColorWhite"
        android:layout_below="@id/Orders_adress"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/Confirm_reqeust"
        android:layout_width="170dp"
        android:background="@drawable/roundbtn"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textAllCaps="false"
        android:layout_below="@id/Orders_distance"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/Cancel_reqeust"
        android:layout_width="170dp"
        android:background="@drawable/borderstyle"
        android:layout_height="wrap_content"
        android:text="Cancel Order"
        android:textAllCaps="false"
        android:layout_below="@id/Confirm_reqeust"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>