<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/IdLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Accessory  "
            android:textAlignment="center"
            android:drawableTint="@color/colorSecondary"
            android:drawableRight="@drawable/ic_edit"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorSecondary"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/IdLabel2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/additem"/>
        <TextView
            android:id="@+id/item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Image"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            android:layout_below="@id/item_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


        <EditText
            android:id="@+id/item_name"
            android:layout_width="250dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_txt"
            android:hint="Item name"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />


        <EditText
            android:id="@+id/item_desc"
            android:layout_width="250dp"
            android:maxLines="2"
            android:minLines="1"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_below="@id/item_name"
            android:layout_height="wrap_content"
            android:hint="Item description "
            android:layout_centerHorizontal="true"/>


        <EditText
            android:id="@+id/item_price"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_desc"
            android:hint="Item price"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/item_price"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/delete_accessory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                android:layout_marginTop="8dp"
                app:fab_colorPressed="@color/ColorGrey"
                app:fab_icon="@drawable/ic_delete"
                app:fab_colorNormal="@color/ColorWhite"/>


            <Button
                android:id="@+id/BtnAdd_Item"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/roundbtn_black"
                android:textColor="@color/ColorWhite"
                android:text="Update item"
                android:layout_marginLeft="8dp" />

        </LinearLayout>


    </RelativeLayout>





</androidx.core.widget.NestedScrollView>