<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gas.swiftel.Activity.ResetPassActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/Image45"
                android:layout_width="220dp"
                android:layout_centerHorizontal="true"
                android:layout_height="190dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/resepass"/>


            <TextView
                android:id="@+id/SignUp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset password.."
                android:textStyle="bold"
                android:layout_below="@id/Image45"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"/>



            <TextView
                android:id="@+id/SignUp2"
                android:layout_below="@id/SignUp1"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textAlignment="center"

                android:layout_height="wrap_content"
                android:text="A link will be sent to the email you provided."
                android:gravity="center_horizontal" />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/EmailReset"
                android:layout_below="@id/SignUp2"
                android:layout_width="300dp"
                android:layout_marginTop="8dp"

                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:errorEnabled="true">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="  Your Email"
                    android:drawableRight="@drawable/ic_email"
                    android:drawableTint="@color/ColorGrey"
                    android:inputType="textEmailAddress"/>


            </com.google.android.material.textfield.TextInputLayout>









            <Button
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:id="@+id/ResetBtn"
                android:layout_below="@id/EmailReset"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundbtn_black"
                android:textColor="@color/colorSecondary"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:text="Send"/>






        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>



</RelativeLayout>