<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/Ord_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/Linear77"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/OrdCard_Image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">


                <TextView
                    android:id="@+id/OrdCard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item name"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/OrdCard_kgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="description"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/OrdCard_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/OrdCard_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ColorGrey"
                    android:text="Payment"
                    android:textSize="16dp"
                    android:textStyle="normal" />




            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/Linear77"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/OrdCard_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:layout_below="@id/Linear77"
                android:text="Order from"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/OrdCard_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22/july/2020 | 4:00" />

            </LinearLayout>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/Delte_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:drawableRight="@drawable/ic__delete_outline"
                android:drawableTint="@color/colorSecondary"
                android:layout_marginLeft="10dp" />





            <TextView
                android:id="@+id/OrdCard_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Delte_item"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:text="Qty"
                android:textColor="@color/colorSecondary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp" />


            <TextView
                android:id="@+id/OrdCard_refillprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="category"
                android:textSize="16dp"
                />




        </LinearLayout>






    </RelativeLayout>


</androidx.cardview.widget.CardView>