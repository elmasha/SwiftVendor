<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ndroid="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:layout_editor_absoluteY="25dp">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/CloseDialogWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_close"
                android:drawableTint="@color/colorSecondary"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/depo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposit Remit"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="center"/>







            <LinearLayout
                android:id="@+id/Linear7"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/depo"
                android:layout_height="wrap_content"
                >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/Img12"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/deposit"
                        android:layout_below="@id/depo"
                        android:layout_centerHorizontal="true"/>





                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/DepositAmount"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/DepositPhone"
                            android:text="Amount"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:gravity="center_horizontal"
                             />

                        <TextView
                            android:id="@+id/cashTrips"
                            android:text=""
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             />

                    </LinearLayout>


                </LinearLayout>





                <TextView
                    android:id="@+id/deposit123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/ColorGrey"
                    />




                <TextView
                    android:id="@+id/Edit_phone23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit no."
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorSecondary"
                    android:drawableTint="@color/colorSecondary"
                    android:drawableRight="@drawable/ic_edit"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/LinearPhone"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/DepositPhone"
                        android:layout_width="180dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Message2"
                        android:hint="Enter Phone"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:inputType="phone"
                        android:textColor="#808080"
                        android:textSize="18sp"
                        android:gravity="center_horizontal" />


                </LinearLayout>

            </LinearLayout>



            <TextView
                android:id="@+id/Message2"
                android:layout_below="@id/Linear7"
                android:layout_width="330dp"
                android:textColor="@color/ColorRed"
                android:layout_centerHorizontal="true"
                android:textSize="17dp"
                android:text=""
                android:visibility="gone"
                android:layout_height="wrap_content"/>










            <Button
                android:id="@+id/DepositBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Message2"
                android:layout_marginTop="16dp"
                android:background="@drawable/roundbtn_black"
                android:text="Deposit"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondary" />



            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kitItem12"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorBlack"
                android:layout_below="@id/Message2"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>





</RelativeLayout>