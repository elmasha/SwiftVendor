<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/LayoutWalk"
    android:layout_height="match_parent"
    tools:context="com.gas.swiftel.Activity.WalkthroughActivity">


<!--    <ImageView-->
<!--        android:background="@drawable/pp1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:alpha="0.8"-->
<!--        android:layout_height="match_parent"-->
<!--        />-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/Slide_viewPager"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">






    </LinearLayout>

    <LinearLayout
        android:id="@+id/Dot_layout"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"></LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@drawable/ic_expand_less"
            android:drawableTint="@color/colorSecondary"
            android:textColor="@color/colorSecondary"
            android:text="Privacy and Policy"/>


        <Button
            android:id="@+id/get_Started"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Get Started "
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textSize="17dp"
            android:textStyle="bold"
            android:background="@drawable/roubtnsec"
            android:textColor="@color/ColorWhite"
            />

        <CheckBox
            android:id="@+id/checkbox12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:theme="@style/checkBoxStyle"
            android:textColor="@color/ColorGrey"
            android:text="I Agree to Terms and conditions"/>




    </LinearLayout>










    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:background="@color/Transparent"
        android:textColor="@color/colorSecondary"
        android:text="Back"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/Transparent"
        android:textStyle="bold"
        android:textColor="@color/colorSecondary"
        android:text="Swipe "
        android:layout_alignParentRight="true" />



</RelativeLayout>