<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextHeaderVendors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mpesa payment"
        android:textSize="22dp"
        android:textColor="@color/colorSecondary"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/TextVendors"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Vendors will have
 to pay an Activation fee of Ksh. 150"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@id/TextHeaderVendors"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/Mobile_number"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint=" Phone Number"
        android:inputType="number"
        android:layout_below="@+id/TextVendors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableTint="#808080"/>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Mobile_number"
        android:visibility="gone"
        android:id="@+id/Spin_kitPayment"/>


    <Button
        android:id="@+id/StkPush"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Mobile_number"
        android:layout_centerHorizontal="true"
        android:text="Confirm payment"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:background="@drawable/roundbtn_black"
        android:textColor="@color/ColorWhite"/>

</RelativeLayout>