<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/CloseDialogShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_close"
                android:drawableTint="@color/colorSecondary"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true" />


<!--            <TextView-->
<!--                android:id="@+id/Closetxt"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Oops! You're closing."-->
<!--                android:textSize="20dp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:textColor="@color/colorSecondary"-->
<!--                android:layout_gravity="center"/>-->


            <ImageView
                android:id="@+id/Img12CLose"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:src="@drawable/close_shop"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/Close_txtView"
                android:layout_width="270dp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Img12CLose"
                android:text="Do you want close your shop or stay open in background?"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ColorGrey"
                android:textSize="18sp" />



            <LinearLayout
                android:layout_below="@id/Close_txtView"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/StayON_Btn"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/DepositAmount"
                    android:background="@drawable/roundbtn_black"
                    android:text=" Open in background"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textColor="@color/colorSecondary" />


                <Button
                    android:id="@+id/closeShopBtn"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/DepositAmount"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/roubtnsec"
                    android:text="Close shop"
                    android:textSize="17dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textColor="@color/ColorWhite" />



            </LinearLayout>



            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kitItemClose"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorBlack"
                android:layout_below="@id/Close_txtView"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>





</RelativeLayout>