<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/Payhist_name"
                        android:layout_width="wrap_content"
                        android:text="Comfirm Payment"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:id="@+id/Payhist_amount"
                        android:layout_width="wrap_content"
                        android:text="200"
                        android:layout_gravity="end"
                        android:layout_alignParentRight="true"
                        android:layout_margin="8dp"
                        android:textColor="@color/colorSecondary"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                         />


                    <TextView
                        android:id="@+id/Payhist_desc"
                        android:textColor="@color/ColorGrey"
                        android:layout_below="@id/Payhist_name"
                        android:text="Confirm Payment ELmasha"
                        android:layout_width="260dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />
                    <TextView
                        android:id="@+id/Payhist_phone"
                        android:textColor="@color/ColorGrey"
                        android:layout_below="@id/Payhist_desc"
                        android:text="89899"
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp" />






                </RelativeLayout>

                <TextView
                    android:id="@+id/Payhist_time"
                    android:textColor="@color/ColorGrey"
                    android:layout_below="@id/Payhist_phone"
                    android:text=""
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>



        </LinearLayout>

<!--        <View-->
<!--            android:id="@+id/Payhist_view"-->
<!--            android:layout_width="5dp"-->
<!--            android:background="@color/ColorGrey"-->
<!--            android:layout_height="110dp"/>-->







    </RelativeLayout>


</RelativeLayout>